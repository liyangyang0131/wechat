/* components/toast/toast.wxss */
.wrap{
  position:absolute;
  left:0;
  top:0;
  right:0;
  bottom:0;
  display: flex;
  align-items: center;
  justify-content:center;
  z-index:-1;
}
.mask{
  z-index:9999; 
}

.content{
  position:absolute;
  padding:10px 15px 12px;
  border-radius: 8px;
  background-color:rgba(0,0,0,0.5);
  color:#fff;
}